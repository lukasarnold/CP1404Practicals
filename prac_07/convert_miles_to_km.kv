BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '34'
            font_size: 48
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment_up(int(input_number.text))
            Button:
                text: 'Down'
                on_press: app.handle_increment_down(int(input_number.text))
    Button:
        text: 'Convert miles to kilometres'
        on_press: app.handle_conversion_to_km(int(input_number.text))
    Label:
        id: output_label
        font_size: 48
        text: '54.717'
        color: (1.0, 1.0, 0.0, 1.0)